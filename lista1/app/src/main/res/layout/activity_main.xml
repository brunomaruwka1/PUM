<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!-- Pytanie -->
<TextView
android:id="@+id/question_text"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Pytanie"
android:textSize="28sp"
    android:textAlignment="center"
    android:layout_marginBottom="16dp"/>

    <!-- Opcje wyboru odpowiedzi (RadioGroup dla radiobuttonów) -->
<RadioGroup
android:id="@+id/answer_group"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="vertical"
android:gravity="center"> <!-- Wycentrowanie grupy odpowiedzi -->

<RadioButton
    android:id="@+id/answer_1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Odpowiedź 1"
    android:textSize="22sp"
android:layout_gravity="center"/>

<RadioButton
    android:id="@+id/answer_2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Odpowiedź 2"
    android:textSize="22sp"
    android:layout_gravity="center"/>

<RadioButton
    android:id="@+id/answer_3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Odpowiedź 3"
    android:textSize="22sp"
    android:layout_gravity="center"/>

<RadioButton
    android:id="@+id/answer_4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Odpowiedź 4"
    android:textSize="22sp"
    android:layout_gravity="center"/>
</RadioGroup>

    <!-- Przycisk zatwierdzający odpowiedź -->
<Button
android:id="@+id/submit_button"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Zatwierdź"
android:textSize="22sp"
    android:layout_marginTop="24dp"
    android:layout_gravity="center"/>

    <!-- Tekst końcowy quizu (na start ukryty) -->
<TextView
android:id="@+id/final_score"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Twój wynik: 0/10"
android:textSize="28sp"
    android:visibility="gone"
    android:layout_marginTop="24dp"
    android:layout_gravity="center"/>
    </LinearLayout>
